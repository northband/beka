<h1>Your Product List</h1>

<% for p in @products -%>
	<div class="entry">
		Image
		<h3><%=h p.title %></h3>
		<%= p.description %>
		<div class="price-line">
			<span class="price"><%= number_to_currency(p.price) %></span>
			<div>
          <% form_remote_tag :url => { :action => 'add_to_cart', :id => p } do %>
            <%= submit_tag "Add to Cart" %>
          <% end %>
      </div>
		</div>
	</div>
<% end -%>


