<% form_tag do %>
<table class="form">
<tr>
	<th><label for="name">Email:</label></th>
	<td><%= text_field_tag :email, params[:email], :size => 30 %></td>
</tr>
<tr>
	<th><label for="password">Password:</label></th>
	<td><%= password_field_tag :password, params[:password], :size => 30 %></td>
</tr>
<tr>
	<td></td>
	<td><%= submit_tag "Login" %></td>
</tr>
</table>
<% end %>