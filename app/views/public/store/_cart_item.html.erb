<% if cart_item == @current_item %>
	<tr id="current_item">
<% else %>
	<tr>
<% end %>
	<td><%= cart_item.product.product_images.first.photo.url(:small) ? image_tag(cart_item.product.product_images.first.photo.url(:small)) : image_tag("no_image_small.jpg", :class => 'thumbnail') %></td>
	<td><%= cart_item.quantity.blank? ? 1 : cart_item.quantity %></td>
	<td><%=h cart_item.product.title %><br/>
		<%= truncate(cart_item.product.description, :length => 80) %></td>
	<td><%= number_to_currency(cart_item.product.price) %></td>
</tr>